<div class= "show_grid">
  <div class= image_card >
   <img src= <%= @cocktail.pic_url%> class = image/>
    <%= link_to cocktails_path  do %>
      <i class="fas fa-chevron-circle-left" id="back_icon"></i>
    <%end%>
    </div>
    <div class = "text_info">
      <h2><%= @cocktail.name %></h2>
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li><%= dose.description %> <%= dose.ingredient.name%></li>
          <%end%>
        </ul>
          <%= link_to new_cocktail_dose_path(@cocktail) do %>
            <i class="fas fa-plus-circle" id="plus_icon"></i>
          <%end%>
        </div>
  </div>
</div>
  <div class="dots">
        <%= image_tag("overlay.png")%>
    </div>



